def tic_tac_toe():
    board = [" "] * 9
    player = "X"
    print("Крестики-нолики. Игроки: X и O. Пустые клетки отмечены номерами 1–9.")
    print_board(board)
    while True:
        move = get_move(player, board)
        board[move] = player
        print_board(board)

        winner = check_winner(board)
        if winner:
            print(f"Победа игрока {winner}!")
            break
        if is_draw(board):
            print("Ничья.")
            break

        player = "O" if player == "X" else "X"

if __name__ == "__main__":
    tic_tac_toe()
